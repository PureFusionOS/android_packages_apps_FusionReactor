<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/fusion_settings_title" >
    
        <!-- Animation Settings -->
        <Preference
            android:key="animation_settings"
            android:title="@string/animation_title"
            android:fragment="com.fusion.reactor.settings.animation.AnimationSettings"
            android:layout="@layout/preference_fusion_animations"
            />
    
        <!-- AppOps -->
        <Preference
            android:key="app_ops_settings"
            android:title="@string/app_ops_settings_title"
            android:layout="@layout/preference_fusion_appops">
            <intent android:action="android.intent.action.MAIN"
                android:targetPackage="com.android.settings"
                android:targetClass="com.android.settings.applications.AppOpsSummary" />
        </Preference>
	
        <!-- App sidebar -->
        <Preference
            android:key="app_sidebar"
            android:fragment="com.fusion.reactor.settings.AppSidebar"
            android:title="@string/app_sidebar_title"
            android:layout="@layout/preference_fusion_appbar" 
            />
	
        <!-- Battery LED -->
        <Preference
	    android:key="charging_light"
	    android:title="@string/battery_light_settings"
	    android:fragment="com.fusion.reactor.settings.BatteryLightSettings"
            android:layout="@layout/preference_fusion_batterylight"
	    />

        <!-- Buttons -->
        <Preference
            android:key="button_settings"
            android:title="@string/button_settings_title"
            android:fragment="com.fusion.reactor.settings.ButtonSettings"
	    android:layout="@layout/preference_fusion_buttons"
	    />
	    
	<!-- Gesture anywhere -->
        <Preference
            android:key="gesture_anywhere"
            android:fragment="com.fusion.reactor.settings.gestureanywhere.GestureAnywhereSettings"
            android:title="@string/gesture_anywhere_title"
            android:layout="@layout/preference_fusion_gestureanywhere"
            />
	    
       <!-- Lockscreen -->
       <Preference
            android:key="lockscreen_settings"
            android:title="@string/lockscreen_settings_fusion_title" 
            android:fragment="com.fusion.reactor.settings.LockScreenSettings"
            android:layout="@layout/preference_fusion_lockscreen"
            />

        <!-- Navigation Bar -->
        <Preference
            android:key="navbar_settings"
            android:title="@string/navbar_settings_title" 
            android:fragment="com.fusion.reactor.settings.NavbarSettings"
            android:layout="@layout/preference_fusion_navbar"
            />
	    
       <!-- Notifications -->
       <Preference
            android:key="fusion_notifications_category"
            android:fragment="com.fusion.reactor.settings.Notifications"
            android:title="@string/notifications_settings_fusion_title" 
            android:layout="@layout/preference_fusion_notifications"
            />

        <!-- Recents -->
        <Preference
            android:key="recents_settings"
            android:title="@string/recents_settings_title"
            android:fragment="com.fusion.reactor.settings.RecentsSettings"
            android:layout="@layout/preference_fusion_recents"
            />

        <!-- Quick Settings -->
        <Preference
            android:id="@+id/quick_settings"
            android:title="@string/quicksettings_title"
            android:fragment="com.fusion.reactor.settings.QuickSettings"
            android:layout="@layout/preference_fusion_quicksettings"
            />

        <!-- Status Bar -->
        <Preference
            android:key="statusbar_settings"
            android:title="@string/statusbar_settings_title"
            android:fragment="com.fusion.reactor.settings.StatusbarSettings" 
            android:layout="@layout/preference_fusion_statusbar" 
            />
	    
        <!-- Developer Settings -->
        <Preference
            android:key="developer_settings"
            android:title="@string/developer_settings_title" 
            android:fragment="com.fusion.reactor.settings.DeveloperSettings"
            android:layout="@layout/preference_fusion_developer"
            />

</PreferenceScreen>
